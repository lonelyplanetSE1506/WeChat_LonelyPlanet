<form bindsubmit='addcomment'>
    <i-panel title="发表评论">
        <i-input value="{{ cmcontent }}" bind:change="cmcontentInputChange" type="textarea"  placeholder="评论内容140字" maxlength="140"/>
    </i-panel>

  <view style="position:fixed; bottom:0;width:100%">
    <i-button bind:click="backClick" type="ghost" shape="circle">返回</i-button>
    <i-button bind:click="addcomment" type="primary" shape="circle">发表评论</i-button>
  </view>

</form>

<i-toast id="toast" />