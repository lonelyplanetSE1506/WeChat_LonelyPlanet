/* pages/1to1/1to1.wxss */

.space{
  margin-top: 15px;
}
.space1{
  margin-top: 5px;
}


.wishlist{
  margin-left: 10%;
  margin-right: 10%;
  margin:40rpx;
  width:80%;
  padding: 7rpx;
  /*border:5rpx solid rgba(34, 32, 31, 0.699);*/
}


.line {  
  width: 100%;  
  height: 1px;  
  background-color: black;  
  margin-top: 1px;  
} 


.itema{
  display: flex;
  width: 100%;
  flex-direction: row;
  justify-content: space-between;
}

.itemb{
  display: flex;
  width: 100%;
  flex-direction: row-reverse;
  justify-content: space-between;
}

.item1{
  display: flex;
  flex-direction: column;
  width: 20%;
}

.item2{
  display: flex;
  flex-direction: row;
  width: 60%;
  background-color: rgb(23, 219, 233);
}

.item3{
  display: flex;
  flex-direction: column;
  width: 80%;
}

.item4{
  display: flex;
  flex-direction: column;
  width: 20%;
}

.row{
  display: flex;
  align-items: center;
  margin-bottom: 0rem;
}


.row text{
  flex-grow: 1;
  text-align: right;
}

.row input{
  font-size: 0.7rem;
  flex-grow: 3;
  border: 1px solid #13afb49f;
  display:inline-block; 
  border-radius: 0.3rem;
  box-shadow: 0 0 0.15rem;
  padding: 0.3rem;
}


